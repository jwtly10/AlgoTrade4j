<configuration>
    <!-- Appender for non-prod environments -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON appender for prod environment -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <logLevel/>
                <threadName/>
                <loggerName/>
                <message/>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>30</maxDepthPerThrowable>
                        <maxLength>2048</maxLength>
                        <shortenedClassNameLength>20</shortenedClassNameLength>
                    </throwableConverter>
                </stackTrace>
                <mdc/>
                <contextName/>
            </providers>
        </encoder>
    </appender>

    <!-- Async appender for prod environment -->
    <appender name="ASYNC_JSON_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON_CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Configuration for non-prod environments -->
    <springProfile name="!prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Configuration for prod environment -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC_JSON_CONSOLE"/>
        </root>

        <!-- Force all loggers to use the JSON console appender in prod -->
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_JSON_CONSOLE"/>
        </logger>
        <logger name="org.apache" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_JSON_CONSOLE"/>
        </logger>
        <!-- Add more logger configurations for other libraries if needed -->
    </springProfile>
</configuration>